{
  "name": "@mux-elements/polyfills",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "repository": "https://github.com/muxinc/elements",
  "author": "Mux, Inc.",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev:cjs": "open-process | yarn build:cjs --watch",
    "dev:types": "yarn build:types -w",
    "dev": "npm-run-all --parallel dev:types dev:cjs",
    "build:cjs": "esbuild src/** --target=es2019 --format=cjs --outdir=dist",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir './dist/types'",
    "build": "npm-run-all --parallel build:types build:cjs"
  },
  "devDependencies": {
    "esbuild": "^0.13.13",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.5.2"
  }
}
